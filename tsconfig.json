{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Strictness (Your Preferences) */
    "strict": true,
    "noUnusedLocals": true,      // KEEPS IT CLEAN: Flags variables you defined but didn't use.
    "noUnusedParameters": true,  // KEEPS IT CLEAN: Flags function args you don't use.
    "noFallthroughCasesInSwitch": true,

    /* The "Hybrid Mode" Settings */
    "allowJs": true,           // Critical: Lets your app run with a mix of .js and .ts files.
    "checkJs": false,          // Critical: Ignores errors in old JS files so you can focus only on the file you are converting.
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "server"]
}
