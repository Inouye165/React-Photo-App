# Sample CI/Test environment for server (no secrets)

# AI Configuration
AI_ENABLED=true
# ENABLE_AI is accepted as an alias for AI_ENABLED
OPENAI_API_KEY=test-openai-api-key
USE_LANGCHAIN=true
NOMINATIM_USER_AGENT=React-Photo-App/1.0

# JWT Configuration (test only)
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
NODE_ENV=test
ALLOW_DEV_DEBUG=true

# Security Configuration
ENABLE_HTTPS=false
FORCE_HTTPS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=20

# Database Configuration (tests mock DB; values are placeholders)
DB_PATH=photos.test.db
SUPABASE_DB_URL=postgresql://user:pass@localhost:5432/postgres
SUPABASE_DB_URL_MIGRATIONS=postgresql://user:pass@localhost:5432/postgres

# Supabase Storage (placeholders)
SUPABASE_URL=https://test.supabase.co
SUPABASE_ANON_KEY=test-anon-key
SUPABASE_SERVICE_ROLE_KEY=test-service-role-key

# Storage Access Keys (placeholders)
SUPABASE_STORAGE_ACCESS_KEY_ID=test-access-key
SUPABASE_STORAGE_SECRET_KEY=test-secret-key

# File Upload Configuration
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,heic,heif

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Google Custom Search Configuration
GOOGLE_API_KEY=test-google-api-key
GOOGLE_CSE_ID=test-cse-id
# Added for tests that explicitly check for this key
GOOGLE_PLACES_API_KEY=test-google-places-api-key
GOOGLE_MAPS_API_KEY=${GOOGLE_PLACES_API_KEY}

# LangSmith / LangChain tracing (test-safe values)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=lsv2_test_key_abcdefghijklmnopqrstuvwxyz
LANGCHAIN_PROJECT=photo-app

# SerpAPI Key
SERPAPI_API_KEY=test-serpapi-key
